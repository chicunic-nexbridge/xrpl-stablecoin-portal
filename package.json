{
  "name": "xrpl-stablecoin-portal",
  "version": "0.1.0",
  "description": "XRPL JPY Portal (React + Vite monorepo)",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:token": "pnpm -F @xrpl-stablecoin-portal/token dev",
    "dev:bank": "pnpm -F @xrpl-stablecoin-portal/bank dev",
    "build": "pnpm -r build",
    "build:token": "pnpm -F @xrpl-stablecoin-portal/token build",
    "build:bank": "pnpm -F @xrpl-stablecoin-portal/bank build",
    "preview:token": "pnpm -F @xrpl-stablecoin-portal/token preview",
    "preview:bank": "pnpm -F @xrpl-stablecoin-portal/bank preview",
    "typecheck": "pnpm -r --parallel exec tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "check": "pnpm run typecheck && pnpm run lint",
    "fix": "pnpm run lint:fix",
    "clean": "pnpm -r exec rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.9.0",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
